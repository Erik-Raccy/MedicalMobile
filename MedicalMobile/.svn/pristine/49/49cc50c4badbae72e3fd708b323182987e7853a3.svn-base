<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:text="@string/infoPageTitle"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/name_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView1"
        android:layout_margin="8dp"
        android:text="Name: "
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/address_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/name_tag"
        android:layout_margin="8dp"
        android:text="Address: "
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/telephone_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/birthday_tag"
        android:layout_margin="8dp"
        android:text="Telephone: "
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/birthday_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/address_tag"
        android:layout_margin="8dp"
        android:text="Birthday: "
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/height_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_below="@+id/request_info_change"
        android:layout_margin="8dp"
        android:text="@string/height"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/weight_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/height_tag"
        android:layout_margin="8dp"
        android:text="@string/weight"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/bp_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/weight_tag"
        android:layout_margin="8dp"
        android:text="@string/bloodPressure"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/powers_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/bp_tag"
        android:layout_margin="8dp"
        android:text="@string/numSuperPowers"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <Button
        android:id="@+id/request_info_change"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/telephone_tag"
        android:layout_marginBottom="2dp"
        android:text="@string/reqInfoButton" />

    <Button
        android:id="@+id/graph"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:text="@string/graphButton" />

    <TextView
        android:id="@+id/bp_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/bp_tag"
        android:layout_alignParentRight="true"
        android:text="No data inputted"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/weight_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/weight_tag"
        android:layout_alignParentRight="true"
        android:text="No data inputted"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/height_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/height_tag"
        android:layout_alignParentRight="true"
        android:layout_margin="0dp"
        android:text="No data inputted"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/appointments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/graph"
        android:layout_below="@+id/powers_tag"
        android:layout_alignParentLeft="true"
        android:text="@string/appHistoryButton" />

    <TextView
        android:id="@+id/powers_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/powers_tag"
        android:layout_alignParentRight="true"
        android:text="No data inputted"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/name_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/name_tag"
        android:layout_alignParentRight="true"
        android:text="No data inputted"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/address_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/address_tag"
        android:layout_alignParentRight="true"
        android:text="No data inputted"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/birthday_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/birthday_tag"
        android:layout_alignParentRight="true"
        android:text="No data inputted"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/telephone_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/telephone_tag"
        android:layout_alignParentRight="true"
        android:text="No data inputted"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>