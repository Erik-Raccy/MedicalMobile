<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="20dp"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="Appointment In Progress"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="24dp" />

    <EditText
        android:id="@+id/weight_input"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/title"
        android:layout_below="@+id/title"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Weight" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/age_input"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/weight_input"
        android:layout_below="@+id/weight_input"
        android:ems="10"
        android:hint="Age" />

    <EditText
        android:id="@+id/height_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/age_input"
        android:layout_alignRight="@+id/title"
        android:layout_toRightOf="@+id/weight_input"
        android:ems="10"
        android:hint="Height" />

    <EditText
        android:id="@+id/power_level_input"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/age_input"
        android:layout_alignBottom="@+id/age_input"
        android:layout_alignRight="@+id/height_input"
        android:layout_toRightOf="@+id/age_input"
        android:ems="10"
        android:hint="Power Level" />

    <EditText
        android:id="@+id/symptoms_input"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_alignLeft="@+id/age_input"
        android:layout_alignRight="@+id/power_level_input"
        android:layout_below="@+id/bp_sys_input"
        android:ems="10"
        android:hint="Fill out symptoms here..." />

    <EditText
        android:id="@+id/add_details_input"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_alignLeft="@+id/age_input"
        android:layout_alignRight="@+id/power_level_input"
        android:layout_below="@+id/symptoms_input"
        android:ems="10"
        android:hint="Add comments here..." />

    <EditText
        android:id="@+id/bp_sys_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/age_input"
        android:layout_below="@+id/age_input"
        android:layout_toLeftOf="@+id/power_level_input"
        android:ems="10"
        android:hint="BP Sys" />

    <EditText
        android:id="@+id/bp_dia_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/power_level_input"
        android:layout_alignRight="@+id/power_level_input"
        android:layout_below="@+id/age_input"
        android:ems="10"
        android:hint="BP Dia" />

    <Button
        android:id="@+id/submit_appointment_prog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/add_details_input"
        android:layout_alignParentBottom="true"
        android:text="Submit" />

    <Button
        android:id="@+id/cancel_appointment_prog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/add_details_input"
        android:text="Cancel" />

</RelativeLayout>