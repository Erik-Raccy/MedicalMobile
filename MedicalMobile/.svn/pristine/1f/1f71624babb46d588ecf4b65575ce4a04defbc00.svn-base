<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/personal_info_box"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Enter your personal info (Optional)"
        android:inputType="textMultiLine" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/request_info_change"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/personal_info_box"
        android:layout_centerHorizontal="true"
        android:text="Request Info Change" />

    <EditText
        android:id="@+id/medical_info_box"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/request_info_change"
        android:layout_above="@+id/graph"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Enter your medical info here"
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="History" />

    <Button
        android:id="@+id/appointments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/history"
        android:layout_centerHorizontal="true"
        android:text="Appointments" />

    <Button
        android:id="@+id/graph"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/appointments"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:text="Graph" />

</RelativeLayout>