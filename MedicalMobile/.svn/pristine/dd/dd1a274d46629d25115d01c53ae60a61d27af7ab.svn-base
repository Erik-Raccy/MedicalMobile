<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:text="@string/graphOptionsTitle"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/WeightGraph"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="WeightHandler"
        android:text="Weight" />

    <Button
        android:id="@+id/PressureGraph"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="PressureHandler"
        android:text="Blood Pressure" />

    <Button
        android:id="@+id/HeightGraph"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="HeightHandler"
        android:text="Height" />

    <Button
        android:id="@+id/PowerGraph"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="PowerHandler"
        android:text="Power Level" />

</LinearLayout>